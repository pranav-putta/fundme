<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.codealizer.fundme.Welcome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/google_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:background="@drawable/login_google_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Sign up with google" />

        <Button
            android:id="@+id/facebook_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_fb_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Sign up with facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="sans-serif-thin"
            android:text="OR"
            android:textStyle="bold" />

        <Button
            android:id="@+id/email_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Sign up with email" />


    </LinearLayout>
</RelativeLayout>
