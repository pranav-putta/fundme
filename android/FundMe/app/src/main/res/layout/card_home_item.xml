<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_home_item"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_home_item_backdrop"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/card_home_item_date"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_home_item_backdrop"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="Tuesday, August 24, 2016"
            android:textColor="@color/md_white_1000" />

        <TextView
            android:id="@+id/card_home_item_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/card_home_item_date"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="Couple of iPads"
            android:textColor="@color/md_white_1000" />

        <Button
            android:id="@+id/card_home_item_view_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_home_item_backdrop"
            android:text="View Item"
            android:theme="@style/AppTheme.ColoredButton" />

        <include
            android:id="@+id/card_home_item_liked"
            layout="@layout/like_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <include
            android:id="@+id/card_home_item_viewed"
            layout="@layout/viewed_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/card_home_item_liked" />


    </RelativeLayout>

</android.support.v7.widget.CardView>